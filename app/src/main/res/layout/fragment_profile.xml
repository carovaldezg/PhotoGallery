<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/profile_pic"
        android:layout_height="@dimen/profile_pic"
        android:src="@drawable/profilepic" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big_extra"
        android:layout_marginBottom="@dimen/spacing_big_extra"
        android:layout_marginEnd="@dimen/spacing_medium_extra"
        android:layout_marginStart="@dimen/spacing_medium_extra"
        app:cardCornerRadius="@dimen/font_small_more"
        android:backgroundTint="@color/orange_shadow"
        android:elevation="@dimen/spacing_big">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_extra"
            android:layout_marginBottom="@dimen/spacing_medium_extra"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:gravity="center"
            android:text="@string/profile_description"/>

    </android.support.v7.widget.CardView>

</LinearLayout>